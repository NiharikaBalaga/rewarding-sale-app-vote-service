{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true
  },
  "compileOnSave": true,
}